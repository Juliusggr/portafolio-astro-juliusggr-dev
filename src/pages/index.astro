---
import Badge from '../components/Badge.astro';
import Layout from '../layouts/Layout.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkedInIcon from '../components/icon/LinkedInIcon.astro';
import GitHubIcon from '../components/icon/GithubIcon.astro';
import MailIcon from '../components/icon/Mail.astro';
---

<Layout title="Portafolio de Juliusggr - Desarrollador y programador web">
	<main>

		<section class="w-full mx-auto lg:w-[740px] py-44">
			<img 
			class="rounded-full size-12 mb-6"
			src="https://imagedelivery.net/5ejkUOtsMH5sf63fw6q33Q/3f15af18-376d-4ee8-069d-dff321a8e900/public" 
			alt="Logo-Juliusggr" 
			/>

		<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-8">
			Hey, soy Julio Cesar <a 
			href="https://www.linkedin.com/in/juliusggr-dev/" 
			target="_blank" 
			rel="noopener" 
			class="flex justify-center items-center"
			>
			<Badge>Disponible para trabajar</Badge>
		</h1>

		<h2 class="text-xl opacity-80">Sin experiencia laboral pero con ganas de trabajar. Desarrollador Web 
			de Puerto La Cruz, Venezuela. Especializado en crear aplicaciones unicas.
		</h2>

		<nav class="flex gap-x-4 mt-6">
				<SocialPill href="https://www.linkedin.com/in/juliusggr-dev/">
					<LinkedInIcon class="size-6" />
					LinkedIn
				</SocialPill>
				<SocialPill href="https://github.com/Juliusggr">
					<GitHubIcon class="size-6" />
					Github
				</SocialPill>
				<SocialPill href="">
					<MailIcon class="size-6" />
					Juliuscaesargg@outlook.com
				</SocialPill>
		</nav>

		</section>

	</main>
</Layout>